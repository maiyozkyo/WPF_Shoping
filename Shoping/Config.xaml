<Window x:Class="Shoping.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shoping"
        mc:Ignorable="d"
        Title="Config" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <Label Content="Server:" Canvas.Left="165" Canvas.Top="99" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Database:" Canvas.Left="149" Canvas.Top="130"/>
        <TextBox Text="{Binding Server}" Name="serverTextBox" Canvas.Left="232" Canvas.Top="103" HorizontalAlignment="Left" VerticalAlignment="Center" Width="123"/>
        <TextBox Text="{Binding Database}" Name="databaseTextBox" Canvas.Left="232" Canvas.Top="134" HorizontalAlignment="Left" VerticalAlignment="Center" Width="123"/>
        <Button x:Name="okButton" Content="Save" IsDefault="True" Height="31" Width="62" Canvas.Left="172" Canvas.Top="186"/>
        <Button x:Name="cancelButton" Content="Cancel" IsCancel="True" Canvas.Left="263" Canvas.Top="186" Height="31" Width="61"/>
    </Canvas>
</Window>
