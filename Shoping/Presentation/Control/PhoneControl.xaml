<UserControl x:Class="Shoping.Presentation.Control.PhoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shoping.Presentation.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <TextBlock Text="Phone name: " HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Canvas.Left="27" Canvas.Top="33" Width="70" />
        <TextBox Name="nameTextBox" Text="{Binding Name}" Canvas.Left="117" Canvas.Top="33" HorizontalAlignment="Left" Height="18" VerticalAlignment="Center" Width="157" />
        <TextBlock Text="Phone's price: " Canvas.Left="27" Canvas.Top="99" />
        <TextBox Name="priceTextBox" Text="{Binding Price}" Canvas.Left="117" Canvas.Top="97" HorizontalAlignment="Left" VerticalAlignment="Center" Width="157" />
        <Image x:Name="phoneImage" Source="{Binding Image}" Width="114" Height="101" Canvas.Left="58" Canvas.Top="143" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="browseButton" Content="Browser..." Width="80" Height="35" Canvas.Left="194" Canvas.Top="143" Click="browseButton_Click"/>
    </Canvas>
</UserControl>
