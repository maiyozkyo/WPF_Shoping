<UserControl x:Class="Shoping.Presentation.Control.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shoping.Presentation.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <TextBlock Text="Category name: " HorizontalAlignment="Left" Height="27" VerticalAlignment="Center" Canvas.Left="27" Canvas.Top="33" Width="99" />
        <TextBox Name="nameTextBox" Text="{Binding Name}" Canvas.Left="143" Canvas.Top="33" HorizontalAlignment="Left" Height="18" VerticalAlignment="Center" Width="157" RenderTransformOrigin="0.84,0.581" />
    </Canvas>
</UserControl>
