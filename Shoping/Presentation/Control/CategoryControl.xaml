<UserControl x:Class="Shoping.Presentation.Control.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shoping.Presentation.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <TextBlock Text="Category name: " Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Canvas.Left="139" Canvas.Top="78" Width="86" />
        <TextBox Name="nameTextBox" Text="{Binding Name}" Canvas.Left="231" Canvas.Top="78" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="157" RenderTransformOrigin="0.84,0.581" />
    </Canvas>
</UserControl>
