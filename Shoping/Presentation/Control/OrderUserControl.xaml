<UserControl x:Class="Shoping.Presentation.Control.OrderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shoping.Presentation.Control"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Canvas>
        <Label
            Canvas.Left="10"
            Canvas.Top="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Quản lí đơn hàng"
            FontWeight="Bold"
            Foreground="Purple" />
        <Label
            Canvas.Left="10"
            Canvas.Top="47"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Họ:" />
        <Label
            Canvas.Left="10"
            Canvas.Top="73"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Tên:" />
        <Label
            Canvas.Left="10"
            Canvas.Top="99"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Tổng tiền:" />
        <Label
            Canvas.Left="10"
            Canvas.Top="125"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Ngày giao hàng:" />
        <Label
            Canvas.Left="10"
            Canvas.Top="151"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Tình trạng đơn hàng:" />
        <TextBox
            Name="first_name"
            Canvas.Left="35"
            Canvas.Top="50"
            Width="120"
            TextWrapping="Wrap" />
        <TextBox
            Name="last_name"
            Canvas.Left="41"
            Canvas.Top="76"
            Width="120"
            TextWrapping="Wrap" />
        <TextBlock
            Name="total_money"
            Canvas.Left="79"
            Canvas.Top="103"
            Width="82"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{Binding CartTotalMoney}"
            TextWrapping="Wrap" />
        <DatePicker
            x:Name="delivery_date"
            Canvas.Left="107"
            Canvas.Top="126"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <CheckBox
            Name="payment_status"
            Canvas.Left="133"
            Canvas.Top="157"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Chưa thanh toán" />

        <ListView
            Name="OrderComboBox"
            Canvas.Left="314"
            Canvas.Top="20"
            Width="420"
            Height="400"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.Resources>
                <ContextMenu x:Key="OrderContextMenu">
                    <MenuItem Click="DetailOrder_Click" Header="Detail" />
                    <MenuItem Click="EditOrder_Click" Header="Edit" />
                    <MenuItem Click="DeleteOrder_Click" Header="Delete" />
                </ContextMenu>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="ContextMenu" Value="{StaticResource OrderContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Width="400"
                        Height="100"
                        VerticalAlignment="Center">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="ID: " />
                            <TextBlock Foreground="Red" Text="{Binding RecID}" />
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Customer ID: " />
                            <TextBlock Foreground="Green" Text="{Binding CustomerID}" />
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Total: " />
                            <TextBlock Foreground="Blue" Text="{Binding TotalMoney}" />
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Ngày giao hàng: " />
                            <TextBlock Foreground="Red" Text="{Binding DeliveryDate}" />
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Tình trạng đơn hàng: " />
                            <TextBlock Foreground="Green" Text="{Binding PaymentStatus}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <Button
            Canvas.Left="121"
            Canvas.Top="182"
            Height="30"
            Click="CreateOrder_Click"
            Content="Tạo đơn hàng" />
        <Button
            Canvas.Left="166"
            Canvas.Top="101"
            Width="30"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddToCart_Click"
            Content="+" />
        <Button
            Canvas.Left="201"
            Canvas.Top="101"
            Click="ResetCart_Click"
            Content="Reset" />
        <Label
            Canvas.Left="10"
            Canvas.Top="230"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Ngày bắt đầu:" />
        <Label
            Canvas.Left="10"
            Canvas.Top="273"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Ngày kết thúc:" />
        <DatePicker
            x:Name="date_before"
            Canvas.Left="94"
            Canvas.Top="231"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <DatePicker
            x:Name="date_after"
            Canvas.Left="95"
            Canvas.Top="275"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <Button
            Canvas.Left="95"
            Canvas.Top="316"
            Width="77"
            Height="27"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="SearchOrder_Click"
            Content="Search" />

        <Rectangle
            Canvas.Left="10"
            Canvas.Top="217"
            Width="299"
            Height="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Stroke="Black" />

        <ComboBox
            Name="pagesComboBox"
            Canvas.Left="474"
            Canvas.Top="432"
            Width="120"
            DisplayMemberPath="DisplayText"/>

        <Button
            Name="previousButton"
            Canvas.Left="420"
            Canvas.Top="432"
            Height="22"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Previous"
            Click="previousButton_Click"/>
        <Button
            Name="nextButton"
            Canvas.Left="599"
            Canvas.Top="432"
            Height="22"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Next"
            Click="nextButton_Click"/>


    </Canvas>
</UserControl>
